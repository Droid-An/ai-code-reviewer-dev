{
  "compilerOptions": {

    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "es2022",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "strictNullChecks": true,

    // To allow ts imports I should set module resolution to “bundler” and either noEmit or emitDeclarationOnly
    "moduleResolution": "bundler",
    "allowImportingTsExtensions":true,
    "noEmit":true,

    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "experiments"]
}
